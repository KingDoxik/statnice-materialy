---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Try to get questions collection, handle case where it might be empty
let allQuestions: Awaited<ReturnType<typeof getCollection<'questions'>>> = [];
try {
  allQuestions = await getCollection('questions');
} catch {
  // Collection might not exist yet
}

// Group questions by subject
const subjectMap = new Map<string, { name: string; slug: string; questions: typeof allQuestions }>();

for (const question of allQuestions) {
  const subjectSlug = question.data.subjectSlug;
  if (!subjectMap.has(subjectSlug)) {
    subjectMap.set(subjectSlug, {
      name: question.data.subject,
      slug: subjectSlug,
      questions: []
    });
  }
  subjectMap.get(subjectSlug)!.questions.push(question);
}

// Sort subjects by slug and questions by order
const subjects = Array.from(subjectMap.values()).sort((a, b) => a.slug.localeCompare(b.slug));
for (const subject of subjects) {
  subject.questions.sort((a, b) => a.data.order - b.data.order);
}
---

<Layout title="Zkouškový mód">
  <div class="exam-home">
    <header class="exam-header">
      <nav class="breadcrumb">
        <a href="/">Domov</a>
        <span class="separator">/</span>
        <span class="current">Zkouškový mód</span>
      </nav>
      <h1>Zkouškový mód</h1>
      <p class="subtitle">Procvičujte si otázky k ústní státní zkoušce. Otázky jsou navrženy pro delší diskuzi (5-10 minut).</p>
    </header>

    {subjects.length === 0 ? (
      <div class="empty-state">
        <div class="empty-icon">?</div>
        <h2>Žádné otázky</h2>
        <p>Zatím nejsou k dispozici žádné zkušební otázky. Použijte CLI nástroj pro jejich vygenerování.</p>
        <code>cd cli && bun run start</code>
      </div>
    ) : (
      <section class="subjects-grid">
        {subjects.map((subject, index) => (
          <a href={`/exam/${subject.slug}/1`} class="subject-card">
            <span class="subject-index">{index + 1}</span>
            <h2 class="subject-title">{subject.name}</h2>
            <p class="question-count">{subject.questions.length} otázek</p>
            <div class="progress-bar">
              <div class="progress-fill" data-subject={subject.slug} style="width: 0%"></div>
            </div>
            <p class="progress-text" data-subject-progress={subject.slug}>0 / {subject.questions.length} procvičeno</p>
          </a>
        ))}
      </section>
    )}
  </div>
</Layout>

<script>
  // Load progress from localStorage
  function loadProgress() {
    const progressData = localStorage.getItem('exam-progress');
    if (!progressData) return;

    try {
      const progress = JSON.parse(progressData);

      document.querySelectorAll('.progress-fill').forEach((bar) => {
        const subject = bar.getAttribute('data-subject');
        if (subject && progress[subject]) {
          const practiced = progress[subject].practiced || [];
          const totalEl = document.querySelector(`[data-subject-progress="${subject}"]`);
          if (totalEl) {
            const match = totalEl.textContent?.match(/\/ (\d+)/);
            const total = match ? parseInt(match[1]) : 0;
            const percent = total > 0 ? (practiced.length / total) * 100 : 0;
            (bar as HTMLElement).style.width = `${percent}%`;
            totalEl.textContent = `${practiced.length} / ${total} procvičeno`;
          }
        }
      });
    } catch {
      // Invalid JSON, ignore
    }
  }

  loadProgress();
</script>

<style>
