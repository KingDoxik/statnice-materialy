    color: var(--text-muted);
    font-size: 1.0625rem;
    line-height: 1.6;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: var(--bg-elevated);
    border: 1px solid var(--border);
    border-radius: 0.75rem;
  }

  .empty-icon {
    width: 4rem;
    height: 4rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    background: var(--bg-soft);
    border-radius: 50%;
    font-size: 2rem;
    color: var(--text-muted);
  }

  .empty-state h2 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    color: var(--text);
  }

  .empty-state p {
    color: var(--text-muted);
    margin-bottom: 1rem;
  }

  .empty-state code {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: var(--bg-soft);
    border-radius: 0.375rem;
    font-size: 0.875rem;
    color: var(--text);
  }

  .subjects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .subject-card {
    display: block;
    padding: 1.5rem;
    background: var(--bg-elevated);
    border: 1px solid var(--border);
    border-radius: 0.75rem;
    text-decoration: none;
    transition: all 0.2s ease;
    position: relative;
    box-shadow: var(--shadow-sm);
  }

  .subject-card:hover {
    border-color: var(--color-accent);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .subject-index {
    position: absolute;
    top: 1rem;
    right: 1rem;
    width: 2rem;
    height: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg-soft);
    border: 1px solid var(--border);
    border-radius: 50%;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-muted);
  }

  .subject-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text);
    margin-bottom: 0.5rem;
    padding-right: 2.5rem;
    line-height: 1.4;
  }

  .question-count {
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-bottom: 1rem;
  }

  .progress-bar {
    height: 4px;
    background: var(--bg-soft);
    border-radius: 2px;
    overflow: hidden;
    margin-bottom: 0.5rem;
  }

  .progress-fill {
    height: 100%;
    background: var(--color-accent);
    border-radius: 2px;
    transition: width 0.3s ease;
  }

  .progress-text {
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  @media (max-width: 768px) {
    .exam-header h1 {
      font-size: 1.5rem;
    }

    .subjects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
