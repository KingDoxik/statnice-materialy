---
import { getCollection } from 'astro:content';

interface Props {
  currentSlug?: string;
}

const { currentSlug } = Astro.props;

const allChapters = await getCollection('subjects');

// Group chapters by subject
const subjectMap = new Map<string, { name: string; slug: string; chapters: typeof allChapters }>();

for (const chapter of allChapters) {
  const subjectSlug = chapter.data.subjectSlug;
  if (!subjectMap.has(subjectSlug)) {
    subjectMap.set(subjectSlug, {
      name: chapter.data.subject,
      slug: subjectSlug,
      chapters: []
    });
  }
  subjectMap.get(subjectSlug)!.chapters.push(chapter);
}

// Sort subjects by slug (which has numeric prefix)
const subjects = Array.from(subjectMap.values()).sort((a, b) => a.slug.localeCompare(b.slug));

// Sort chapters within each subject by order
for (const subject of subjects) {
  subject.chapters.sort((a, b) => a.data.order - b.data.order);
}

// Determine current subject from current chapter
const currentChapter = allChapters.find(c => c.slug === currentSlug);
const currentSubjectSlug = currentChapter?.data.subjectSlug || subjects[0]?.slug;
---

<aside class="sidebar" id="sidebar">
  <nav class="sidebar-nav">
    <div class="sidebar-top">
      <a class="brand" href="/" aria-label="Domov - Statnice IST UX">
        <span class="brand-mark" aria-hidden="true">IST</span>
        <span class="brand-text">
          <span class="brand-title">Statnice</span>
          <span class="brand-subtitle">UX vyzkum a design</span>
        </span>
      </a>
    </div>

    <!-- Subject dropdown -->
    <div class="subject-dropdown">
      <button
        class="subject-dropdown-trigger"
        id="subject-dropdown-trigger"
        aria-expanded="false"
        aria-controls="subject-list"
      >
        <span class="current-subject" id="current-subject-name">
          {subjects.find(s => s.slug === currentSubjectSlug)?.name || 'Vybrat predmet'}
        </span>
        <svg class="dropdown-arrow" width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M3 4.5L6 7.5L9 4.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>

      <ul class="subject-list" id="subject-list" role="listbox">
        {subjects.map((subject, index) => (
          <li>
            <button
              class={`subject-item ${subject.slug === currentSubjectSlug ? 'active' : ''}`}
              data-subject-slug={subject.slug}
              data-subject-name={subject.name}
              data-first-chapter-href={`/${subject.chapters[0]?.slug ?? ''}`}
              role="option"
              aria-selected={subject.slug === currentSubjectSlug}
            >
              <span class="subject-number">{index + 1}.</span>
              {subject.name}
            </button>
          </li>
        ))}
      </ul>
    </div>

    <!-- Chapters list -->
    <div class="chapters-container">
      {subjects.map(subject => (
        <ul
          class={`chapter-list ${subject.slug === currentSubjectSlug ? 'visible' : ''}`}
          data-subject-slug={subject.slug}
        >
          {subject.chapters.map(chapter => (
            <li>
              <a
                href={`/${chapter.slug}`}
                class={`chapter-link ${chapter.slug === currentSlug ? 'active' : ''}`}
              >
                {chapter.data.title}
              </a>
            </li>
          ))}
        </ul>
      ))}
    </div>
  </nav>
</aside>

<!-- Mobile menu toggle -->
<div class="sidebar-backdrop" id="sidebar-backdrop" aria-hidden="true"></div>

<button
  class="mobile-menu-toggle"
  id="mobile-menu-toggle"
  aria-label="Otevrit menu"
  aria-controls="sidebar"
  aria-expanded="false"
>
  <svg class="menu-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M3 12H21M3 6H21M3 18H21" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
  </svg>
  <svg class="close-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
  </svg>
</button>

<style>
  .sidebar {
    position: fixed;
    top: 0;
    left: 0;
    width: var(--sidebar-width);
    height: 100vh;
    background: var(--sidebar-bg);
    border-right: 1px solid var(--border);
    overflow-y: auto;
    z-index: 220;
    padding: 1.25rem 0;
    transition: transform 0.3s ease;
  }

  .sidebar-nav {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .sidebar-top {
    padding: 0 1rem 1rem;
    border-bottom: 1px solid var(--border);
    margin-bottom: 1rem;
  }

  .brand {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: var(--text);
    padding: 0.5rem 0.625rem;
    border-radius: var(--radius-md);
    transition: background-color 0.15s ease;
  }

  .brand:hover {
    background: var(--bg-soft);
  }

  .brand-mark {
    width: 2.25rem;
    height: 2.25rem;
    display: grid;
    place-items: center;
    border-radius: 0.65rem;
    background: color-mix(in srgb, var(--color-accent) 16%, var(--bg-elevated));
    border: 1px solid color-mix(in srgb, var(--color-accent) 25%, var(--border));
    color: var(--color-accent);
    font-weight: 800;
    letter-spacing: 0.02em;
    box-shadow: var(--shadow-sm);
  }

  .brand-text {
    display: flex;
    flex-direction: column;
    line-height: 1.15;
    min-width: 0;
  }

  .brand-title {
    font-weight: 700;
    font-size: 0.95rem;
  }

  .brand-subtitle {
    font-size: 0.8125rem;
    color: var(--text-muted);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* Subject dropdown */
  .subject-dropdown {
    position: relative;
    padding: 0 1rem;
    margin-bottom: 1rem;
  }

  .subject-dropdown-trigger {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.75rem 1rem;
    background: var(--bg-elevated);
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    color: var(--text);
    font-size: 0.9375rem;
    font-weight: 500;
    cursor: pointer;
    text-align: left;
    box-shadow: var(--shadow-sm);
    transition: border-color 0.2s ease, box-shadow 0.2s ease, transform 0.2s ease;
  }

  .subject-dropdown-trigger:hover {
    border-color: var(--color-accent);
    box-shadow: var(--shadow-md);
  }

  .current-subject {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .dropdown-arrow {
    flex-shrink: 0;
    margin-left: 0.5rem;
    transition: transform 0.2s ease;
  }

  .subject-dropdown.open .dropdown-arrow {
    transform: rotate(180deg);
  }

  .subject-list {
    position: absolute;
    top: calc(100% + 0.25rem);
    left: 1rem;
    right: 1rem;
    background: var(--bg-elevated);
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    padding: 0.5rem;
    list-style: none;
    margin: 0;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-0.5rem);
    transition: all 0.2s ease;
    max-height: 60vh;
    overflow-y: auto;
    box-shadow: var(--shadow-lg);
    z-index: 10;
  }

  .subject-dropdown.open .subject-list {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .subject-item {
    width: 100%;
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    padding: 0.625rem 0.75rem;
    background: none;
    border: none;
    border-radius: 0.375rem;
    color: var(--text);
    font-size: 0.875rem;
    text-align: left;
    cursor: pointer;
    transition: background-color 0.15s ease;
  }

  .subject-item:hover {
    background: var(--bg-soft);
  }

  .subject-item.active {
    background: var(--color-accent);
    color: white;
  }

  .subject-number {
    flex-shrink: 0;
    color: var(--text-muted);
    font-weight: 500;
  }

  .subject-item.active .subject-number {
    color: rgba(255, 255, 255, 0.8);
  }

  /* Chapters */
  .chapters-container {
    flex: 1;
    overflow-y: auto;
    padding: 0 1rem;
  }

  .chapter-list {
    display: none;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .chapter-list.visible {
    display: block;
  }

  .chapter-link {
    display: block;
    padding: 0.625rem 0.75rem;
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.875rem;
    line-height: 1.4;
    border-radius: 0.375rem;
    transition: all 0.15s ease;
  }

  .chapter-link:hover {
    color: var(--text);
    background: var(--bg-soft);
  }

  .chapter-link.active {
    color: var(--color-accent);
    background: rgba(79, 109, 122, 0.1);
    font-weight: 500;
  }

  /* Mobile menu toggle */
  .mobile-menu-toggle {
    display: none;
    position: fixed;
    top: 1rem;
    left: 1rem;
    z-index: 230;
    padding: 0.5rem;
    background: color-mix(in srgb, var(--bg-elevated) 80%, var(--sidebar-bg));
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    color: var(--text);
    cursor: pointer;
    box-shadow: var(--shadow-sm);
    transition: transform 0.15s ease, box-shadow 0.15s ease, border-color 0.15s ease;
  }

  .mobile-menu-toggle:hover {
    border-color: var(--color-accent);
    box-shadow: var(--shadow-md);
  }

  .mobile-menu-toggle:active {
    transform: translateY(1px);
  }

  .mobile-menu-toggle .close-icon {
    display: none;
  }

  .mobile-menu-toggle.open .menu-icon {
    display: none;
  }

  .mobile-menu-toggle.open .close-icon {
    display: block;
  }

  .sidebar-backdrop {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.35);
    z-index: 210;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.2s ease;
  }

  .sidebar-backdrop.visible {
    opacity: 1;
    pointer-events: auto;
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    .sidebar {
      transform: translateX(-100%);
      width: min(88vw, 320px);
      box-shadow: var(--shadow-lg);
    }

    .sidebar.open {
      transform: translateX(0);
    }

    .mobile-menu-toggle {
      display: block;
    }

    .sidebar-backdrop {
      display: block;
    }
  }
</style>

<script>
  // Subject dropdown toggle
  const dropdownTrigger = document.getElementById('subject-dropdown-trigger');
  const dropdown = dropdownTrigger?.closest('.subject-dropdown');
  const subjectList = document.getElementById('subject-list');
  const currentSubjectName = document.getElementById('current-subject-name');
  const chapterLists = document.querySelectorAll('.chapter-list');
  const subjectItems = document.querySelectorAll('.subject-item');

  dropdownTrigger?.addEventListener('click', () => {
    const isOpen = dropdown?.classList.contains('open');
    dropdown?.classList.toggle('open');
    dropdownTrigger?.setAttribute('aria-expanded', (!isOpen).toString());
  });

  // Close dropdown when clicking outside
  document.addEventListener('click', (e) => {
    if (!dropdown?.contains(e.target as Node)) {
      dropdown?.classList.remove('open');
      dropdownTrigger?.setAttribute('aria-expanded', 'false');
    }
  });

  // Subject selection
  subjectItems.forEach(item => {
    item.addEventListener('click', () => {
      // If re-selecting current subject, just close dropdown.
      if (item.getAttribute('aria-selected') === 'true') {
        dropdown?.classList.remove('open');
        dropdownTrigger?.setAttribute('aria-expanded', 'false');
        return;
      }

      const slug = item.getAttribute('data-subject-slug');
      const name = item.getAttribute('data-subject-name');
      const firstChapterHref = item.getAttribute('data-first-chapter-href');

      // Update active state
      subjectItems.forEach(i => {
        i.classList.remove('active');
        i.setAttribute('aria-selected', 'false');
      });
      item.classList.add('active');
      item.setAttribute('aria-selected', 'true');

      // Update current subject name
      if (currentSubjectName && name) {
        currentSubjectName.textContent = name;
      }

      // Show corresponding chapter list
      chapterLists.forEach(list => {
        if (list.getAttribute('data-subject-slug') === slug) {
          list.classList.add('visible');
        } else {
          list.classList.remove('visible');
        }
      });

      // Close dropdown
      dropdown?.classList.remove('open');
      dropdownTrigger?.setAttribute('aria-expanded', 'false');

      // Navigate to the first chapter of the selected subject
      if (firstChapterHref) {
        window.location.assign(firstChapterHref);
      }
    });
  });

  // Mobile menu toggle
  const mobileToggle = document.getElementById('mobile-menu-toggle');
  const sidebar = document.getElementById('sidebar');
  const backdrop = document.getElementById('sidebar-backdrop');

  function setSidebarOpen(open) {
    sidebar?.classList.toggle('open', open);
    mobileToggle?.classList.toggle('open', open);
    backdrop?.classList.toggle('visible', open);
    mobileToggle?.setAttribute('aria-expanded', open ? 'true' : 'false');
    mobileToggle?.setAttribute('aria-label', open ? 'Zavrit menu' : 'Otevrit menu');
    document.body.style.overflow = open ? 'hidden' : '';
  }

  mobileToggle?.addEventListener('click', () => {
    const isOpen = !!sidebar?.classList.contains('open');
    setSidebarOpen(!isOpen);
  });

  backdrop?.addEventListener('click', () => setSidebarOpen(false));

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      setSidebarOpen(false);
      dropdown?.classList.remove('open');
      dropdownTrigger?.setAttribute('aria-expanded', 'false');
    }
  });

  // Close sidebar when clicking on a link on mobile
  const chapterLinks = document.querySelectorAll('.chapter-link');
  chapterLinks.forEach(link => {
    link.addEventListener('click', () => {
      if (window.innerWidth <= 768) {
        setSidebarOpen(false);
      }
    });
  });

  // Ensure sidebar is closed when resizing up to desktop
  window.addEventListener('resize', () => {
    if (window.innerWidth > 768) {
      setSidebarOpen(false);
    }
  }, { passive: true });
</script>
